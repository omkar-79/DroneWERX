# Database Configuration
DATABASE_URL="postgresql://dronewerx:secure_password@localhost:5432/dronewerx_db?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=dronewerx_db
DATABASE_USER=dronewerx
DATABASE_PASSWORD=secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security Headers
SESSION_SECRET=your-session-secret-key-here

# Audit & Logging
LOG_LEVEL=info
AUDIT_RETENTION_DAYS=90

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_FILE_SCANNING=true

# Military Compliance
CLASSIFICATION_LEVELS=PUBLIC,RESTRICTED,CONFIDENTIAL,SECRET
DEFAULT_CLASSIFICATION=PUBLIC

# Development Only
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=true 